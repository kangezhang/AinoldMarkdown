{
  "name": "ainold-desktop",
  "version": "0.1.0",
  "description": "Typora-style Markdown editor built with Electron and Vue",
  "author": "AinoldMarkdown Team",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron electron/main.cjs\"",
    "build": "vite build",
    "build:renderer": "vite build",
    "start": "electron electron/main.cjs",
    "pack": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder --win nsis portable"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^2.11.5",
    "@tiptap/extension-image": "^2.11.5",
    "@tiptap/extension-table": "^2.11.5",
    "@tiptap/extension-table-cell": "^2.11.5",
    "@tiptap/extension-table-header": "^2.11.5",
    "@tiptap/extension-table-row": "^2.11.5",
    "@tiptap/extension-task-item": "^2.11.5",
    "@tiptap/extension-task-list": "^2.11.5",
    "@tiptap/vue-3": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "highlight.js": "^11.11.1",
    "lowlight": "^3.3.0",
    "marked": "^15.0.7",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.2",
    "electron": "34.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.ainold.markdown",
    "productName": "AinoldMarkdown",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown file",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown file",
        "role": "Editor"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "include": "build/installer.nsh"
    }
  }
}
